.nav
  width 100%
  height 50px
  text-align center
  background #e53935
  line-height 50px
  color #ffffff
  font-size 20px
  font-weight 800
.btn
  width: 80%
  display flex
  justify-content space-around
  margin 10px auto
  .button
    border-radius 20px
    width 100px
form
  width 80%
  margin 20px auto
  .item
    margin-bottom 35px
    label
      display block
      color #ddd
    input
      width 100%
      height 30px
      border none
      outline none
      line-height 30px
      border-bottom 1px solid #e53935
      padding-left 10px
